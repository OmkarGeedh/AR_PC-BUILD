<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <stroke android:width="1dip" android:color="#74B9FF" />
            <gradient android:angle="-90" android:startColor="#74B9FF" android:endColor="#3498DB"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <stroke android:width="1dip" android:color="#74B9FF" />
            <solid android:color="#3498DB"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="35dip" />
            <stroke android:width="1dip" android:color="#74B9FF" />
            <gradient android:angle="-90" android:startColor="#3498DB" android:endColor="#74B9FF" />
        </shape>
    </item>
</selector>